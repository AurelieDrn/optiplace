<?php
	require_once "util/utilitairePageHtml.php";
	
	class VueAuthentification{
		
		public function genereVueAccueil(){
			$utilitaireHtml=new UtilitairePageHtml();
			echo $utilitaireHtml->genereBandeauAccueil();
			echo '<div class = "content">';
			echo '<div class = "text">';
			echo '<div class = "subcontent">';
			echo "<h2> Connectez-vous pour faire vos achats de livres <h2>";
			echo '</div>';
			echo '</div>';
			echo '</div>';
			echo $utilitaireHtml->generePied();
		}
		
		public function genereVueConnexion(){
			$utilitaireHtml=new UtilitairePageHtml();
			echo $utilitaireHtml->genereBandeauPendantConnexion();
			echo '<div class = "content">';
			echo '<div class = "text">';
			echo '<div class = "subcontent">';
			echo '<h1> Connectez-vous !!!<h1>';
			echo '<table>';
			echo '<form method="post" action="index.php">';
			     
			echo '<tr>';
			echo '<td class="conex"><p>Entrez votre login</p></td>';
			echo '<td><input type="text" name="login" id="login" size="30" maxlength="10" /></td>';
			echo '</tr>';
			     
			echo '<tr>';
			echo '<td class="conex"><p>Entrez votre mot de passe</p></td>';
			echo '<td><input type="password" name="mdp" id="mdp" size="30" maxlength="10" /></td>';
			echo '</tr>';
			echo '<tr>';
			echo '<td></br><input type="submit" value="envoyer"></td>';
			echo '<td></td>';
			echo '</tr>';
			     
			echo '</form>';
			echo '</table>';
			
			echo '</div>';
			echo '</div>';
			echo '</div>';
			echo $utilitaireHtml->generePied();
		}
		
		public function genereVueApresConnexion(){
			$utilitaireHtml=new UtilitairePageHtml();
			echo $utilitaireHtml->genereBandeauApresConnexion();
			echo '<div class = "content">';
			echo '<div class = "text">';
			echo '<div class="subcontent">';
			echo '<h1> Bienvenue ! </h1>';
			echo '<p> Notre site propose une vaste collection de livres pour apprendre l\'informatique et les technologies webs,</br></p>';
			echo '<p> de la programmation php au javascript.</br></br></p>';
			echo '<p> Bonne Lecture !</p>';
			echo '</div>';
			echo '</div>';
			echo '</div>';
			echo $utilitaireHtml->generePied();
		}
	}
	?>
